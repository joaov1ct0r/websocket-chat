{
  "name": "ws",
  "version": "1.0.0",
  "description": "Node Chat Web Socket",
  "main": "./build/index.js",
  "scripts": {
    "lint-staged": "lint-staged",
    "build": "rimraf ./build && tsc && tsc-alias",
    "start": "node -r dotenv/config build/index.js dotenv_config_path=.env",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register src/index.ts dotenv_config_path=.env",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./src/**/**/*.ts": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "nodejs",
    "web",
    "socket",
    "typescript",
    "redis",
    "javascript"
  ],
  "author": "github.com/joaov1ct0r",
  "license": "MIT",
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "ioredis": "^5.3.2",
    "lint-staged": "^15.0.1",
    "rimraf": "^5.0.5",
    "socket.io": "^4.6.2"
  }
}
